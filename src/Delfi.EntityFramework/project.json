{
  "name": "Delfi.EntityFramework",
  "title": "Delfi EntityFramework",
  "authors": [ "Temitope Ajileye" ],
  "language": "en-GB",
  "copyright": "MIT",
  "brief": "Graph Database Entity Framework",
  "description": "Graph Database Entity Framework",
  "version": "0.1.0",
  "versions": [
    {
      "Version": "0.1.0",
      "Description": "Initial version"
    }
  ],

  "dependencies": {
    "Delfi.QueryProvider": {
      "target": "project"
    }
  },

  "frameworks": {
    "netstandard1.5": {
      "imports": "dnxcore50"
    }
  },

  "scripts": {
    "postcompile": [
      "dotnet pack --output C:\\LibraryPackages --no-build --configuration %compile:Configuration%",
      "robocopy bin\\Release C:\\LibraryPackages\\%project:Name% /E /MIR"
    ]
  },

  "buildOptions": {
    "xmlDoc": true,
    "copyToOutput": {
      "include": [
        "project.json"
      ]
    }
  },

  "packOptions": {
    "repository": {
      "type": "git",
      "url": "https://github.com/Temitope-A/Delfi"
    }
  }
}
